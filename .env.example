# Copy this file to .env and configure as needed

# Directory containing your notes (default: ~/notes)
# NOTES_DIRECTORY=/path/to/your/notes

# Directory to store the search index (default: ~/.personal_search/index)
# INDEX_DIRECTORY=/path/to/index

# Embedding model to use
# For local embeddings (default):
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# For better quality but slower:
# EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# OpenAI API key (only needed if USE_LOCAL_EMBEDDINGS=false)
# OPENAI_API_KEY=your-api-key-here

# Use local embeddings (true) or OpenAI embeddings (false)
USE_LOCAL_EMBEDDINGS=true

# Text chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Number of search results to return by default
TOP_K=5